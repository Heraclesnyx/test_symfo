{% extends 'base.html.twig' %}

{% block body %}
    <h1>Student</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ student.id }}</td>
        </tr>
        <tr>
            <th>LastName</th>
            <td>{{ student.lastName }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ student.firstName }}</td>
        </tr>
        <tr>
            <th>Numero Etudiant</th>
            <td>{{ student.numEtud }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('student_index') }}" class="btn btn-secondary">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('student_edit', { 'id': student.id }) }}" class="btn btn-warning">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}
